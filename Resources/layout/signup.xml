<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/btnSignUpBackArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_shape"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/backarrow"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="640dp"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Signup"
            android:textSize="52dp"
            android:textStyle="bold"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#B9B8B8"
            app:passwordToggleEnabled="true"
            tools:ignore="XmlNamespace">
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:hint="Username"
                android:id="@+id/etSignUpUsername"
                android:textSize="24dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#B9B8B8"
            app:passwordToggleEnabled="true"
            tools:ignore="XmlNamespace">
            <EditText
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:id="@+id/etSignUpPassword"
                android:textSize="24dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#B9B8B8"
            app:passwordToggleEnabled="true"
            tools:ignore="XmlNamespace">
            <EditText
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:id="@+id/etSignUpPasswordConfirm"
                android:textSize="24dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:text="Password must have 8 or more characters, an uppercase letter and a number."
            android:background="@drawable/rectangle_shape"
            android:id="@+id/btnSigup"
            android:textColor="#bdbdbd"/>
		<TextView
            android:layout_marginTop="2dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:textColor="#ff1d0d"
            android:textSize="12dp"
            android:id="@+id/tvSignUpNotif"/>
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:backgroundTint="#2C8E8E"
            android:id="@+id/btnSignup"
            android:textColor="#26414f"/>
    </LinearLayout>
</RelativeLayout>
